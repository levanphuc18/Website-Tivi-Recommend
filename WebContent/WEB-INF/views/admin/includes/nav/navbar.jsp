        <script type="text/javascript">
        	const clock = document.getElementById("clock");
        	const runClock = () => {
        		const today = new Date();
	        	const date_locale = today.toLocaleDateString("vi-VN", {
	        			weekday: "long",
		        		year: "numeric",
	        		    month: "2-digit",
	        		    day: "2-digit",
	        		});
